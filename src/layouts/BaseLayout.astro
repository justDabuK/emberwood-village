---
import '../styles/global.css';
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import {sanitizeTitle} from "../scripts/sanitizeTitle";

interface Props {
	title: string;
	icon?: string;
}

const { title, icon } = Astro.props;
const viewTransitionNameStyle = `view-transition-name: ${sanitizeTitle(title)}`;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icons/deliriumCrystal.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Header />
		{icon ?
			<div class="headline-container">
				<img src={`/icons/${icon}.png`} alt={icon} style={`view-transition-name: ${icon}`}/>
				<h1 style={viewTransitionNameStyle}>{title}</h1>
			</div> :
			<h1 style={viewTransitionNameStyle}>{title}</h1>
		}
		<slot />
	</body>
</html>

<style>
	img {
		height: 4rem;
	}

	.headline-container {
		display: flex;
		align-items: center;
		gap: 2rem;
	}
</style>
