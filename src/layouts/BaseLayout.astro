---
import '../styles/global.css';
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
import {sanitizeTitle} from "../scripts/sanitizeTitle";
import { Icon } from 'astro-icon/components';
import InlineIcon from '../components/InlineIcon.astro';

interface Props {
	title: string;
	icon?: string;
}

const { title, icon, iconCover } = Astro.props;
const titleTransitionName = `view-transition-name: ${sanitizeTitle(title)}`;
const iconTransitionName = `view-transition-name: ${sanitizeTitle(icon ?? "")}`;

const isSvg = icon?.endsWith(".svg");
const iconNameWithoutExtension = icon?.split(".")[0];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/deliriumCrystal.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<!-- TODO: make the header appear below the content, when we are in mobile mode (like youtube, spotify, etc.)-->
		<Header />
		<main >
				<div class="headline-container">
					<InlineIcon icon={icon} size="4rem" cover={iconCover}/>
					<h2 style={titleTransitionName}>{title}</h2>
				</div>
			<slot />
		</main>
	</body>
</html>

<style define:vars={{icon}}>
	html {
		background-color: var(--body-bg);
		font-family: system-ui;
		color: var(--text-color);
	}

	body {
		display: grid;
		grid-template-columns: 15rem 1fr;
		gap: 4rem;
		min-height: 100vh;
		overflow: auto;
	}

	img {
		height: 4rem;
	}

	[data-icon] {
		height: 4rem;
		width: 4rem;
	}

	main {
		padding: 2rem 0;
		max-width: 80%;
		overflow: auto;
	}

	.headline-container {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	@media screen and (max-width: 1000px) {
		body {
			display: grid;
			grid-template-columns: 1fr;
			grid-template-rows: 1fr auto;
			gap: 1rem;
			max-height: 100vh;
		}

		main {
			grid-row: 1;
			max-width: 100%;
			padding: 0.5rem;
		}
	}
</style>
