---
import BaseLayout from "./BaseLayout.astro";
import { getMagicItemIconName } from "../scripts/getMagicItemIconName";

type Props = {
  frontmatter: {
    title: string;
    rarity: string;
    type: string;
    disabled?: boolean;
  };
};

const { frontmatter } = Astro.props;
---

<BaseLayout
  title={frontmatter.title}
  icon={getMagicItemIconName(frontmatter.type)}
>
  {
    frontmatter.disabled ? (
      <span>Nice try. Come back once this is unlocked</span>
    ) : (
      <slot />
    )
  }
</BaseLayout>
