---
import MarkdownLink from "./MarkdownLink.astro";
import { getMagicItemIconName } from "../scripts/getMagicItemIconName";

type Props = {
  slug: string;
  data: {
    title: string;
    rarity: boolean;
    type: string;
    disabled: boolean;
  };
};

const { item } = Astro.props;
---

<MarkdownLink
  url={`/magicItems/${item.slug}`}
  title={item.data.title}
  disabled={item.data.disabled}
  icon={getMagicItemIconName(item.data.type)}
/>
