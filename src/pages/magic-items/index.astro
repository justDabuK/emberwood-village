---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MarkdownLink from "../../components/MarkdownLink.astro";

const allMagicItems = (await Astro.glob("/src/pages/magic-items/*.md"));

---

<BaseLayout title="Magic Items">
    <ul>
        {allMagicItems.map((item) => <MarkdownLink url={item.url} title={item.frontmatter.title} disabled={item.frontmatter.disabled} />)}
    </ul>
</BaseLayout>