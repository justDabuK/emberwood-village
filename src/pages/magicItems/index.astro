---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MagicItemListItem from "../../components/MagicItemListItem.astro";
import { getCollection } from "astro:content";

const allMagicItems = await getCollection("magicItems");
---

<BaseLayout title="Magic Items">
  <ul>
    {allMagicItems.map((item) => <MagicItemListItem item={item} />)}
  </ul>
</BaseLayout>
