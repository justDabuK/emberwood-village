---
import BaseLayout from "../../layouts/BaseLayout.astro";
import {sanitizeTitle} from "../../scripts/sanitizeTitle";
import { Image } from 'astro:assets';
import jazzProfilePicture from "../../assets/jazz-profile-picture.png";
import remiProfilePicture from "../../assets/remi-profile-picture.jpg";
import dominikProfilePicture from "../../assets/dominik-profile-picture.jpg";

---
<BaseLayout title="Characters">
    <p>Here you will see the characters and links to their specific sites</p>
    <div class="character-list-container">
        <div class="card">
            <a href="/characters/nex">
                <h3 style={`view-transition-name: ${sanitizeTitle("Nex")}`}>Nex</h3>
                <Image src={dominikProfilePicture} alt="Nex profile picture" class="profile-picture"/>
            </a>
        </div>
        <div class="card">
            <a href="/characters/remi">
                <h3 style={`view-transition-name: ${sanitizeTitle("Remi")}`}>Remi</h3>
                <Image src={remiProfilePicture} alt="Remi profile picture" class="profile-picture"/>
            </a>
        </div>
        <div class="card">
            <a href="/characters/jazz">
                <h3 style={`view-transition-name: ${sanitizeTitle("Jazz")}`}>Jazz</h3>
                <Image src={jazzProfilePicture} alt="Jazz profile picture" class="profile-picture"/>
            </a>
        </div>
    </div>
</BaseLayout>

<style>
    .card {
        padding: 1rem;
    }

    h3 {
        margin: 0;
        text-align: center;
    }

    a {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .character-list-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
    }

    .profile-picture {
        max-width: 100%;
        object-fit: cover;
        max-height: 400px;
        border-radius: 10px;
    }
</style>