---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MarkdownLink from "../../components/MarkdownLink.astro";
import { getCollection } from "astro:content";

const allDowntimeActivities = await getCollection("downtime");
---

<BaseLayout title="Downtime">
  Downtime activities in and around Emberwood Village that one can do in between
  adventures.
  <ul>
    {
      allDowntimeActivities.map((activity) => (
        <MarkdownLink
          url={`/downtime/${activity.slug}`}
          title={activity.data.title}
          disabled={activity.data.disabled}
        />
      ))
    }
  </ul>
</BaseLayout>
